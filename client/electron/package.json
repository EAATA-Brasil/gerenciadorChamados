{
  "name": "client",
  "productName": "client",
  "version": "1.0.0",
  "description": "My Electron application description",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "frontend": "cd ../frontend && npm run dev",
    "dev": "concurrently \"npm run frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "install:electron": "npm i",
    "install:frontend": "cd ../frontend && npm i",
    "install:all": "npm run install:electron && npm run install:frontend",
    "build": "cd ../frontend && npm run build",
    "copy": "shx rm -rf builds/frontend && shx mkdir -p builds/frontend && shx cp -r ../frontend/dist/* builds/frontend/",
    "package": "npm run build && mkdir builds & npm run copy && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "28.3.3",
    "electron-builder": "^24.6.4",
    "shx": "^0.4.0",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.eaata.helpdesk_client",
    "productName": "EAATAHelpDeskClient",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "splash.html",
      "builds/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
