{
  "name": "eaata-helpdesk",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "br.eaata.pro",
  "author": {
    "name": "Yago DEV",
    "email": "yago.eaatabrasil@gmail.com"
  },
  "scripts": {
    "start": "npm run build-dev:backend && electron .",
    "install:all": "npm run install:electron && concurrently \"npm run install:backend\" \"npm run install:frontend\"",
    "install:backend": "cd ../backend && npm i",
    "install:frontend": "cd ../frontend && npm i",
    "install:electron": "npm i",
    "dev": "concurrently \"npm run frontend\" \"electron .\"",
    "package": "npm run build:all && mkdir builds & npm run copy:all && electron-builder",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd ../backend && npm run pkg:all",
    "build-dev:backend": "cd ../backend && npm run build",
    "build:frontend": "cd ../frontend && npm run build",
    "copy:all": "npm run copy:backend && npm run copy:frontend",
    "copy:backend": "shx rm -rf builds/backend && shx mkdir -p builds/backend && shx cp ../backend/builds/eaata-help-desk* builds/backend/",
    "copy:frontend": "shx rm -rf builds/frontend && shx mkdir -p builds/frontend && shx cp -r ../frontend/dist/* builds/frontend/",    
    "frontend": "cd ../frontend && npm run dev",
    "rebuild:backend": "cd ../backend && npm run rebuild"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "28.3.3",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "shx": "^0.4.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "socket.io-client": "^4.8.1"
  },
  "build": {
    "appId": "com.eaata.helpdesk",
    "productName": "EAATAHelpDesk",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "splash.html",
      "builds/**/*",
      "assets/**/*",
      "package.json",
      "preload.js",
      "utils/*"
    ],
    "asarUnpack": [
      "builds/backend/**",
      "preload.js"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
